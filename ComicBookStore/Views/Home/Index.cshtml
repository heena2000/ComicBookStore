@model IEnumerable<ComicBookStore.Models.ComicCompany>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 heading-font">Welcome To Comic Book Store</h1>
</div>
<div id="demo" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/slides/slide1.jpg" alt="Slide 1" style="width:100%;height:600px">
            <div class="carousel-caption">

            </div>
        </div>
        <div class="carousel-item">
            <img src="~/slides/slide2.jpg" alt="Slide 2" style="width:100%;height:600px">
            <div class="carousel-caption">

            </div>
        </div>
        <div class="carousel-item">
            <img src="~/slides/slide3.jpg" alt="Slide 3" style="width:100%;height:600px">
            <div class="carousel-caption">

            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>
<div class="text-center">
    <h1 class="display-4 heading-font">All Comic Companies</h1>
</div>
<div class="row" style="margin-bottom:50px;">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card w-100">
                <center>
                    <img src="~/slides/icon.jpg" alt="" style="width:100%">
                </center>
                <div class="card-body">
                    <h5 class="card-text">
                        @item.CompanyName
                    </h5>
                    <a class="btn btn-success btn-block" asp-action="ViewComicByCompany" asp-route-id="@item.CompanyID">View All Comics</a>
                </div>

            </div>
        </div>
    }
</div>