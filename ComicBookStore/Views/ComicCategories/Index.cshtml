@model IEnumerable<ComicBookStore.Models.ComicCategory>

@{
    ViewData["Title"] = "Index";
}

<h1 class="heading-font text-center">View All Comic Categories</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.CategoryID">Edit</a> |
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.CategoryID">Details</a> |
                <a asp-action="Delete"  class="btn btn-danger" asp-route-id="@item.CategoryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
