@model IEnumerable<ComicBookStore.Models.ComicInfo>

@{
    ViewData["Title"] = "Index";
}

<h1 class="heading-font text-center">View All Comic Details</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Comic Details</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Photo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComicName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyComic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryComic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/photos/@item.ComicID@item.Extension" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyComic.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryComic.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.ComicID">Edit</a> |
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.ComicID">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ComicID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
