@model ComicBookStore.Models.ComicInfo

@{
    ViewData["Title"] = "Delete";
}

<h1 class="heading-font text-center">Are you sure you want to delete this?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ComicName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComicName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pages)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pages)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyComic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyComic.CompanyName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryComic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryComic.CategoryName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ComicID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">View All Comic Details</a>
    </form>
</div>
