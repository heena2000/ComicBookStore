@model ComicBookStore.Models.ComicInfo

@{
    ViewData["Title"] = "Details";
}

<h1 class="heading-font text-center">Comic Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ComicName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComicName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pages)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pages)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyComic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyComic.CompanyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryComic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryComic.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model.ComicID">Edit</a> |
    <a asp-action="Index">View All Comic Details</a>
</div>
